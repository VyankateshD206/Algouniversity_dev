# MongoDB Configuration
# Replace <username>, <password>, <cluster-url>, and <database-name> with your actual MongoDB Atlas credentials
MONGO_URI=mongodb+srv://<username>:<password>@<cluster-url>/<database-name>?retryWrites=true&w=majority
# For local MongoDB, use: mongodb://localhost:27017/byteforge

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration
FRONTEND_URL=http://localhost:5173
COMPILER_URL=http://localhost:5008

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here-make-this-very-long-and-random
JWT_EXPIRES_IN=7d

# RabbitMQ Configuration
RABBITMQ_URL=amqp://localhost
# For cloud RabbitMQ, use: amqps://username:password@host:port/vhost

# Redis Configuration
REDIS_URL=redis://localhost:6379
# For cloud Redis, use: redis://username:password@host:port

# Gemini AI Configuration (for AI features like code review, hints, boilerplate generation)
GEMINI_API_KEY=your_gemini_api_key_here
